<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/activity_main"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	tools:context="io.github.tsuyosh.displaymetricsdemo.MainActivity">

	<TextView
		android:id="@+id/density_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Density"/>

	<TextView
		android:id="@+id/density_value"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:layout_marginLeft="12dp"
		android:layout_marginStart="12dp"
		android:layout_toEndOf="@+id/scaled_density_title"
		android:layout_toRightOf="@+id/scaled_density_title"
		tools:text="320"/>

	<TextView
		android:id="@+id/density_value2"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:layout_marginLeft="32dp"
		android:layout_marginStart="32dp"
		android:layout_toEndOf="@+id/density_value"
		android:layout_toRightOf="@+id/density_value"
		tools:text="320"/>


	<TextView
		android:id="@+id/scaled_density_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:layout_below="@+id/density_title"
		android:layout_marginTop="8dp"
		android:text="Scaled Density"/>

	<TextView
		android:id="@+id/scaled_density_value"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignTop="@+id/scaled_density_title"
		android:layout_marginLeft="12dp"
		android:layout_marginStart="12dp"
		android:layout_toEndOf="@+id/scaled_density_title"
		android:layout_toRightOf="@+id/scaled_density_title"
		tools:text="240"/>

	<TextView
		android:id="@+id/scaled_density_value2"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignBaseline="@+id/scaled_density_value"
		android:layout_alignBottom="@+id/scaled_density_value"
		android:layout_alignLeft="@+id/density_value2"
		android:layout_alignStart="@+id/density_value2"
		tools:text="240"/>

	<TextView
		android:id="@+id/sampletext1"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:layout_below="@+id/scaled_density_title"
		android:layout_marginTop="42dp"
		android:text="24px"
		android:textSize="24px"/>

	<TextView
		android:id="@+id/sampletext2"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignBaseline="@+id/sampletext1"
		android:layout_marginLeft="24dp"
		android:layout_marginStart="24dp"
		android:layout_toEndOf="@+id/sampletext1"
		android:layout_toRightOf="@+id/sampletext1"
		android:text="24dp"
		android:textSize="24dp"/>

	<TextView
		android:id="@+id/sampletext3"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignBaseline="@+id/sampletext1"
		android:layout_marginLeft="24dp"
		android:layout_marginStart="24dp"
		android:layout_toEndOf="@+id/sampletext2"
		android:layout_toRightOf="@+id/sampletext2"
		android:text="24sp"
		android:textSize="24sp"/>

	<TextView
		android:id="@+id/samplebox1"
		android:layout_width="100px"
		android:layout_height="100px"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:layout_below="@+id/sampletext1"
		android:layout_marginTop="100dp"
		android:background="#80000000"
		android:gravity="center"
		android:text="100px"/>

	<TextView
		android:id="@+id/samplebox2"
		android:layout_width="100dp"
		android:layout_height="100dp"
		android:layout_alignBottom="@+id/samplebox1"
		android:layout_toEndOf="@+id/scaled_density_title"
		android:layout_toRightOf="@+id/scaled_density_title"
		android:background="#80000000"
		android:gravity="center"
		android:text="100dp"/>
</RelativeLayout>
